<tr>
  <td colspan="3">
    <div class="marginZeroFive">
      <div
        class="ui segment top tertiary attached inverted borderRadiusTopZeroThree"
      >
        <div class="ui middle aligned grid inverted">
          <div class="ui eight wide column">
            <h4 class="ui header inverted">
              Edit
              {{model.dev.fullName}}
            </h4>
          </div>
          <div class="right floated right aligned column">
            <i class="close icon" {{action "backToDeveloper" model}}></i>
          </div>
        </div>
      </div>
      <div class="ui form attached fluid segment inverted">
        <div class="two fields">
          <div class="ui fluid labeled input field" data-children-count="1">
            <div class="ui label">
              Name
            </div>
            <Input type="text" @value={{model.name}} placeholder="Name" />
          </div>
        </div>
        <div class="two fields">
          <div class="ui fluid labeled input field" data-children-count="1">
            <div class="ui label">
              Firstname
            </div>
            <Input type="text" @value={{model.fname}} placeholder="Firstname" />
          </div>
        </div>
      </div>
      <div class="ui bottom attached segment  inverted">
        <button class="ui button positive icon" {{action "save" model}}>
          <i class="check circle icon"></i>
          Validate
        </button>
        <button
          class="ui button inverted red icon"
          {{action "backToDeveloper" model}}
        >
          <i class="icon times circle outline"></i>
          Cancel
        </button>
      </div>
    </div>
  </td>
</tr>
{{outlet}}