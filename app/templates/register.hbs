<div class="ui two column centered grid" style="height: 95vh;">
  <div class="column middle aligned bottom aligned">
    <h2 class="ui image header inverted">
      <i class="user circle icon"></i>
      <div class="content">
        Register
      </div>
    </h2>
  </div>
  <div class="two column centered row">
    <div class="column mySegmentBorder borderRadiusZeroFive paddingOne">
      <div class="ui inverted card">
        <div class="content white">
          Avatar
        </div>
        <div class="image">
          <img src="/assets/images/avatars/{{model.selectedImage}}.jpg" />
        </div>
        <div class="extra content">
          <div
            class="ui inverted right floated mini icon compact button"
            {{action "changeImagePlus" model}}
          >
            next
            <i class="chevron circle right icon large selectable"></i>
          </div>
          <div
            class="ui inverted left floated mini icon compact button"
            {{action "changeImageMinus" model}}
          >
            <i class="chevron circle left icon large selectable"></i>
            previous
          </div>
        </div>
        <div class="content white">
          Avatar
        </div>
      </div>
      <div class="ui form inverted">
        <div class="ui inverted grid">
          <div class="ten wide column">
            <div class="ui field inverted">
              <label>
                Email
              </label>
              <Input placeholder="Email" type="email" @value={{model.email}} />
            </div>
            <div class="ui field inverted">
              <label>
                User name
              </label>
              <Input
                placeholder="User name"
                type="text"
                @value={{model.username}}
              />
            </div>
            <div
              class="ui field inverted"
              style="margin-bottom: 14px !important;"
            >
              <label>
                Your favorite languages
              </label>
              <select class="ui multiple dropdown" id="selectLanguagesRegister">
                <option value="">
                  Select your favorite languages
                </option>
                {{#each model.languages as |image|}}
                  <option value="{{image}}">
                    <img
                      src="/assets/images/languages/{{image}}.png"
                      alt="{{image}}"
                    />
                    {{image}}
                  </option>
                {{/each}}
              </select>
              <span class="ui inverted white text">
                Please select at
                <span
                  class="ui inverted
                    {{if model.selectLanguages "green" "red"}}
                     text"
                >
                  least one
                </span>
                language.
              </span>
            </div>
          </div>
          <div class="center floated six wide column selectAvatar">
            <div class="field"></div>
          </div>
        </div>
        <div class="two fields">
          <div class="ui field inverted">
            <label>
              Last name
            </label>
            <Input placeholder="Last name" type="text" @value={{model.name}} />
          </div>
          <div class="ui field inverted">
            <label>
              First name
            </label>
            <Input
              placeholder="First name"
              type="text"
              @value={{model.fname}}
            />
          </div>
        </div>
        <div class="ui field inverted">
          <label>
            Password
          </label>
          <Input
            placeholder="Password"
            id="password"
            type="password"
            @value={{model.password}}
          />
          <span class="ui inverted white text">
            The password must contain at least:
            <span
              class="ui inverted {{if model.lowerPassord "green" "red"}} text"
            >
              one lowercase
            </span>
            ,
            <span
              class="ui inverted {{if model.upperPassord "green" "red"}} text"
            >
              one uppercase
            </span>
            ,
            <span
              class="ui inverted {{if model.numberPassord "green" "red"}} text"
            >
              one number
            </span>
            and
            <span
              class="ui inverted
                {{if (gt model.password.length 8) "green" "red"}}
                 text"
            >
              8 characters
            </span>
            .
          </span>
        </div>
        <div class="ui field inverted">
          <label>
            Re-Password
          </label>
          <Input
            placeholder="re-Password"
            id="repassword"
            type="password"
            @value={{model.repassword}}
          />
          <span class="ui inverted white text">
            Please
            <span
              class="ui inverted {{if model.samePassword "green" "red"}} text"
            >
              re-enter
            </span>
            your password.
          </span>
        </div>
        <br />
        <div
          class="ui primary
            {{if model.allFields "" "disabled"}}
             large fluid button submit"
          {{action "register" model}}
        >
          Register
        </div>
      </div>
    </div>
  </div>
</div>