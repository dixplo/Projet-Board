<div
  class="ui top attached
    {{if (eq model.connected true) "" "container"}}
     borderless main menu inverted applicationMenuTop"
>
  <LinkTo @route="overview" @model="all" class="item">
    Overview
  </LinkTo>
  {{#if (eq model.connected true)}}
    <LinkTo @route="overview" @model="myProject" class="item">
      Home
    </LinkTo>
  {{/if}}
  {{#if (eq model.connected true)}}
    <div class="menu">
      <div class="ui dropdown icon item">
        Projects
        <div class="menu">
          <LinkTo @route="projects.new" @model="create" class="item">
            New
          </LinkTo>
          <LinkTo @route="projects" @model="all" class="item">
            View All
          </LinkTo>
          <LinkTo @route="projects" @model="myProject" class="item">
            View My Projects
          </LinkTo>
        </div>
      </div>
    </div>
  {{else}}
    <LinkTo @route="projects" @model="all" class="item">
      Projects
    </LinkTo>
  {{/if}}
    <LinkTo @route="developers" class="item">
      Developers
    </LinkTo>
  <div class="right menu">
    <div class="ui category search item searchMenu" id="searchAll">
      <div class="ui transparent icon input inverted">
        <input class="prompt" type="text" placeholder="Search..." />
        <i class="search link icon"></i>
      </div>
      <div class="results"></div>
    </div>
    {{#if (eq model.connected true)}}
      <div class="ui dropdown icon item">
        <img
          class="ui image circular mini"
          src="/assets/images/avatars/{{model.user.avatar}}.jpg"
          alt="A"
        />
        <div class="menu">
          <h6 class="header">
            Signed in as
            <h5>
              <b>
                {{model.user.username}}
              </b>
            </h5>
          </h6>
          <div class="divider"></div>
          <div class="item" {{action "openProfil" model}}>
            <i class="user circle icon"></i>
            Your profile
          </div>
          <div class="divider"></div>
          <div class="item">
            <i class="cog icon"></i>
            Settings
          </div>
          <div class="item" {{action "signOut" model}}>
            <i class="sign out alternate icon"></i>
            Sign out
          </div>
        </div>
      </div>
    {{else}}
      <div class="item">
        <div class="ui button" {{action "goToLogin"}}>
          Login
        </div>
      </div>
      <div class="item">
        <div class="ui inverted button" {{action "goToRegister"}}>
          Register
        </div>
      </div>
    {{/if}}
  </div>
</div>
<div
  class="ui bottom attached container inverted applicationContentTop mainMarge"
>
  <div class="ui very basic segment">
    {{outlet}}
  </div>
</div>